<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_margin="15dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/detail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_alignRight="@+id/detail_title"
                android:textColor="@color/lightGray"
                android:layout_below="@+id/detail_title"
                />

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_author"
                android:layout_margin="16dp"/>

            <TextView
                android:id="@+id/detail_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_below="@+id/detail_image"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/detail_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/detail_context"
                android:textColor="@color/darkGray"
                android:textSize="10sp"
                android:layout_below="@+id/detail_context"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
